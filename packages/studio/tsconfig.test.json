{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "types": ["node"],
    "baseUrl": ".",
    "allowImportingTsExtensions": false,
    "allowSyntheticDefaultImports": true,
    "erasableSyntaxOnly": false,
    "moduleResolution": "node",
    "verbatimModuleSyntax": false
  },
  "include": [
    "tests",
    "src/layout/**/*",
    "src/state/**/*",
    "src/types/**/*"
  ]
}
