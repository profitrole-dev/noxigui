{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "types": ["node"],
    "allowImportingTsExtensions": false,
    "allowSyntheticDefaultImports": true,
    "erasableSyntaxOnly": false,
    "moduleResolution": "node",
    "verbatimModuleSyntax": false
  },
  "include": ["tests", "src/state/**/*", "src/types/**/*"]
}
