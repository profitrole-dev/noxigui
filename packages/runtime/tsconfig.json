{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "allowImportingTsExtensions": false,
    "erasableSyntaxOnly": false,
    "baseUrl": "src",
    "paths": {
      "@noxigui/core": ["../core/src/index.ts"],
      "@noxigui/core/*": ["../core/src/*"],
      "@noxigui/runtime": ["./index.ts"],
      "@noxigui/runtime/*": ["./*"]
    },
    "moduleResolution": "node"
  },
  "include": ["src"]
}
